<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/wallpaper_photo" android:gravity="fill"></item>
    <item android:id="@+id/left_rectangle" android:right="200dp">
        <shape android:shape="rectangle">
            <size android:height="100dp" android:width="100dp"/>
            <solid android:color="#66000000"/>
        </shape>
    </item>

    <item android:id="@+id/right_rectangle" android:left="200dp">
        <shape android:shape="rectangle">
            <size android:height="100dp" android:width="100dp"/>
            <solid android:color="#6632CD32"/>
        </shape>
    </item>
</layer-list>
