
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/Widget.InTouch.AppWidget.Container"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@android:color/transparent"
android:theme="@style/Theme.InTouch.AppWidgetContainer">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/emoji_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner"
        android:padding="8dip" >
        android:orientation="horizontal">
        <Button
            android:id="@+id/heart_button"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:text="@string/heart_emoji"/>
        <Button
            android:id="@+id/hug_button"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_marginLeft="8dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:text="@string/hug_emoji"/>
        <Button
            android:id="@+id/cry_button"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:textSize="25sp"
            android:text="@string/cry_emoji"/>
        <Button
            android:id="@+id/muscle_button"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:textSize="25sp"
            android:text="@string/muscle_emoji"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colors_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner"
        android:padding="8dip"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/first_color_button"
            android:background="@drawable/circle_pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/second_color_button"
            android:background="@drawable/circle_white"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/third_color_button"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle_green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="25sp"/>
    </LinearLayout>

</RelativeLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/appwidget_left_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/circle_pink"
                android:contentDescription="@string/appwidget_right_text"
                android:textStyle="bold|italic"
                android:color="#72a682"
                android:translationZ="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/left_button_emoji"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="27dp"
                android:background="@android:color/transparent"
                android:text=""
                android:textSize="15sp"
                android:translationZ="90dp"
                android:elevation="10dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/appwidget_right_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/circle_green"
                android:contentDescription="@string/appwidget_right_text"
                android:textStyle="bold|italic"
                android:translationZ="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/right_button_emoji"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="27dp"
                android:background="@android:color/transparent"
                android:text="@string/hug_emoji"
                android:textSize="15sp"
                android:translationZ="90dp"
                android:elevation="10dp"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

</LinearLayout>