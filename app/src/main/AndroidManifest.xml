<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.intouch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InTouch"
        tools:targetApi="31">
        <service
            android:name=".InTouchAppService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".AllSetActivity"
            android:exported="false" />
        <activity
            android:name=".requests.AcceptCancelRequestActivity"
            android:exported="false" />
        <activity
            android:name=".requests.AcceptedRequestActivity"
            android:exported="false" />
        <activity
            android:name=".requests.WaitRequestActivity"
            android:exported="false" />
        <activity
            android:name=".requests.SentRequestActivity"
            android:exported="false" />

        <receiver
            android:name=".InTouchWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/in_touch_widget_info" />
        </receiver>

        <activity
            android:name=".settings.WallpaperSideActivity"
            android:exported="false" />
        <activity
            android:name=".settings.CustomizeColorsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.ColorSchemePickerActivity"
            android:theme="@style/Theme.AppCompat"
            android:exported="false" />
        <activity
            android:name=".auth.GoogleSignInActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LogInActivity"
            android:exported="false" />
        <activity
            android:name=".auth.AccountCreatedActivity"
            android:exported="false" />
        <activity
            android:name=".auth.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>